<div class="section home ACTIVE">

	<button class="btn nav-bar" data-direction="left" id="btn-profile" data-section="profile"></button>

	<button class="btn nav-bar" data-direction="right" id="btn-play" data-section="levels"></button>

	<h2>Welcome{{#ifeq player.new false}} back{{/ifeq}}, {{player.name.first}}!</h2>

	{{#ifeq player.admin true}}

		{{>admin}}

	{{else}}

		<h4>So far you have {{#if score}}{{score}}{{else}}0{{/if}} leaderboard points!</h4>

		<div class="section leaderboard" style="display:block;">
		{{!-- <h3 id="coming-soon">Leaderboard Coming Soon!</h3> --}}
		{{>board}}
		</div>

	{{/ifeq}}

</div> <!-- .profile -->

<div class="section profile">

	{{>profile}}

</div>


<div class="section levels" style="display:none">

	<div class="level-group">

	<h3>Tutorial Levels:</h3>

		<button class="minimal {{#ifeq player.completed true}}complete{{/ifeq}}" data-level="1">{{#if player.levelOne}}replay {{/if}}level one</button>
		<button class="minimal {{#ifeq player.completed true}}complete{{/ifeq}}" data-level="2" {{#if player.levelOne}}{{else}}disabled{{/if}}>{{#if player.levelTwo}}replay {{/if}}level two</button>
		<button class="minimal {{#ifeq player.completed true}}complete{{/ifeq}}" data-level="3" {{#if player.levelTwo}}{{else}}disabled{{/if}}>{{#if player.levelThree}}replay {{/if}}level three</button>

		{{#ifeq player.completed true}}

		<button class="minimal" data-level="*">speed level</button>

		{{/ifeq}}

		<button class="back nav-bar" data-direction="left" data-section="home"></button>

	</div>

</div>

<div class="nav game" style="display:none">

	<button class="btn nav-bar" data-direction="left" id="btn-end-level" data-section="end-game">End</button>

	<button class="btn nav-bar replay" data-direction="right" id="btn-reload-level" data-section="reload-game">Reload</button>

</div>

<div class="section game" style="display:none">

	<div class="row header level" style="display:none">
		<div class="timer-wrap" style="display:none"></div>
		<div id="points-counter">
			<span id="points-tag">Points: </span>
			<span id="points-text">0</span>
		</div>
		<div class="lives-wrap" style="display:none"></div>
	</div>
	
	<div class="game-level" style="display:none"></div>

</div> {{!-- .game --}}
